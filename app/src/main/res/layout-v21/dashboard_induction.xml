<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/offtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Off Time"
                app:layout_constraintStart_toEndOf="@+id/ontime"
                app:layout_constraintTop_toBottomOf="@+id/spinner6" />

            <TextView
                android:id="@+id/ot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintEnd_toEndOf="@+id/offtime"
                app:layout_constraintStart_toStartOf="@+id/offtime"
                app:layout_constraintTop_toBottomOf="@+id/offtime" />

            <TextView
                android:id="@+id/ont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintEnd_toEndOf="@+id/ontime"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/ontime"
                app:layout_constraintTop_toBottomOf="@+id/ontime" />

            <TextView
                android:id="@+id/ontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="On Time"
                app:layout_constraintStart_toEndOf="@+id/heatno"
                app:layout_constraintTop_toBottomOf="@+id/spinner6" />

            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/customtable"
                android:entries="@array/furnace"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="PF Factor"
                app:layout_constraintEnd_toStartOf="@+id/length"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="64dp"
                android:layout_marginRight="64dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="3.0"
                app:layout_constraintBottom_toBottomOf="@+id/textView23"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView23" />

            <TextView
                android:id="@+id/heatno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Heat No"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner6" />

            <TextView
                android:id="@+id/heat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintEnd_toEndOf="@+id/heatno"
                app:layout_constraintStart_toStartOf="@+id/heatno"
                app:layout_constraintTop_toBottomOf="@+id/heatno" />

            <TextView
                android:id="@+id/totaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Total Time"
                app:layout_constraintBottom_toTopOf="@+id/ot"
                app:layout_constraintStart_toEndOf="@+id/offtime"
                app:layout_constraintTop_toTopOf="@+id/offtime" />

            <TextView
                android:id="@+id/tt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/customtable2"
                android:padding="8dp"
                android:text="12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/totaltime"
                app:layout_constraintStart_toStartOf="@+id/totaltime"
                app:layout_constraintTop_toBottomOf="@+id/totaltime" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>