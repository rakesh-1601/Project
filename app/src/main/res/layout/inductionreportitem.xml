<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/inductionitemconstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/customtable2">

            <TextView
                android:id="@+id/extra_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintBottom_toBottomOf="@+id/offtime3"
                app:layout_constraintStart_toEndOf="@+id/offtime3"
                app:layout_constraintTop_toTopOf="@+id/offtime3" />

            <TextView
                android:id="@+id/ontime2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Aluminium"
                app:layout_constraintBottom_toTopOf="@+id/offtime2"
                app:layout_constraintStart_toStartOf="@+id/totaltime"
                app:layout_constraintTop_toBottomOf="@+id/totaltime" />

            <TextView
                android:id="@+id/aluminium"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintBottom_toBottomOf="@+id/ontime2"
                app:layout_constraintStart_toEndOf="@+id/ontime2"
                app:layout_constraintTop_toTopOf="@+id/ontime2" />

            <TextView
                android:id="@+id/offtime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Silicon"
                app:layout_constraintBottom_toTopOf="@+id/heatno3"
                app:layout_constraintStart_toStartOf="@+id/ontime2"
                app:layout_constraintTop_toBottomOf="@+id/ontime2" />

            <TextView
                android:id="@+id/offtime3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Extra Time"
                app:layout_constraintBottom_toBottomOf="@+id/heatno3"
                app:layout_constraintStart_toStartOf="@+id/heatno2"
                app:layout_constraintTop_toTopOf="@+id/heatno3" />

            <TextView
                android:id="@+id/silicon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintBottom_toBottomOf="@+id/offtime2"
                app:layout_constraintStart_toEndOf="@+id/offtime2"
                app:layout_constraintTop_toTopOf="@+id/offtime2" />

            <TextView
                android:id="@+id/heatno2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Manganese"
                app:layout_constraintBottom_toBottomOf="@+id/offtime2"
                app:layout_constraintEnd_toStartOf="@+id/manganese"
                app:layout_constraintTop_toTopOf="@+id/offtime2" />

            <TextView
                android:id="@+id/heatno3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Extra time reason"
                app:layout_constraintBottom_toTopOf="@+id/textView45"
                app:layout_constraintStart_toStartOf="@+id/offtime2"
                app:layout_constraintTop_toBottomOf="@+id/offtime2" />

            <TextView
                android:id="@+id/manganese"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintBottom_toBottomOf="@+id/heatno2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/heatno2" />

            <TextView
                android:id="@+id/scrap"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="12"
                app:layout_constraintBottom_toBottomOf="@+id/totaltime8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/totaltime8" />

            <TextView
                android:id="@+id/offtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Off Time"
                app:layout_constraintBottom_toBottomOf="@+id/ontime"
                app:layout_constraintEnd_toStartOf="@+id/ot"
                app:layout_constraintTop_toTopOf="@+id/ontime" />

            <TextView
                android:id="@+id/ot"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintBottom_toBottomOf="@+id/offtime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/offtime" />

            <TextView
                android:id="@+id/ont"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintBottom_toBottomOf="@+id/ontime"
                app:layout_constraintStart_toEndOf="@+id/ontime"
                app:layout_constraintTop_toTopOf="@+id/ontime" />

            <TextView
                android:id="@+id/ontime"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="On Time"
                app:layout_constraintBottom_toTopOf="@+id/totaltime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heatno" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="PF Factor"
                app:layout_constraintBottom_toBottomOf="@+id/totaltime"
                app:layout_constraintEnd_toStartOf="@+id/length"
                app:layout_constraintTop_toTopOf="@+id/totaltime" />

            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="3.0"
                app:layout_constraintBottom_toBottomOf="@+id/textView23"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView23"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/heatno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Heat No"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/heat"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintBottom_toBottomOf="@+id/heatno"
                app:layout_constraintStart_toEndOf="@+id/heatno"
                app:layout_constraintTop_toTopOf="@+id/heatno" />

            <TextView
                android:id="@+id/totaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Total Time"
                app:layout_constraintBottom_toTopOf="@+id/ontime2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ontime" />

            <TextView
                android:id="@+id/totaltime8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Scrap"
                app:layout_constraintBottom_toBottomOf="@+id/ontime2"
                app:layout_constraintEnd_toStartOf="@+id/scrap"
                app:layout_constraintTop_toTopOf="@+id/ontime2" />

            <TextView
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="12"
                app:layout_constraintBottom_toBottomOf="@+id/totaltime"
                app:layout_constraintStart_toEndOf="@+id/totaltime"
                app:layout_constraintTop_toTopOf="@+id/totaltime" />

            <TextView
                android:id="@+id/reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="No Extra Time"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/heatno3"
                app:layout_constraintTop_toBottomOf="@+id/heatno3" />

            <TextView
                android:id="@+id/redflag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="91dp"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks : -"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/heatno3"
                app:layout_constraintTop_toBottomOf="@+id/reason" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="No Remarks"
                app:layout_constraintBottom_toBottomOf="@+id/textView45"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView45"
                app:layout_constraintTop_toTopOf="@+id/textView45" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Report Summary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>