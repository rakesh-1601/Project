<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:background="@drawable/customtable2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"

        android:layout_height="180dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/laddle_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="12"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/totaltime4"
                app:layout_constraintStart_toStartOf="@+id/totaltime4"
                app:layout_constraintTop_toBottomOf="@+id/totaltime4" />

            <TextView
                android:id="@+id/totaltime4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Laddle Temp"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/totaltime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/het_no" />

            <TextView
                android:id="@+id/offtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text=" End Time"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ontime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ontime"
                app:layout_constraintTop_toTopOf="@+id/ontime" />

            <TextView
                android:id="@+id/etime_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/offtime"
                app:layout_constraintStart_toStartOf="@+id/offtime"
                app:layout_constraintTop_toBottomOf="@+id/offtime" />

            <TextView
                android:id="@+id/stime_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/ontime"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/ontime"
                app:layout_constraintTop_toBottomOf="@+id/ontime" />

            <TextView
                android:id="@+id/ontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Start Time"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/het_no"
                app:layout_constraintEnd_toStartOf="@+id/offtime"
                app:layout_constraintStart_toEndOf="@+id/heatno"
                app:layout_constraintTop_toTopOf="@+id/heatno" />

            <TextView
                android:id="@+id/heatno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Heat No."
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/ontime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/het_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/heatno"
                app:layout_constraintStart_toStartOf="@+id/heatno"
                app:layout_constraintTop_toBottomOf="@+id/heatno" />

            <TextView
                android:id="@+id/totaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Laddle Weight"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/totaltime4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.287"
                app:layout_constraintStart_toEndOf="@+id/totaltime4"
                app:layout_constraintTop_toTopOf="@+id/totaltime4" />

            <TextView
                android:id="@+id/laddle_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="12"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/totaltime"
                app:layout_constraintStart_toStartOf="@+id/totaltime"
                app:layout_constraintTop_toBottomOf="@+id/totaltime" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>