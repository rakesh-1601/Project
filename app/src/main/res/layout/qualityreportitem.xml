<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/totaltime3"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="% Mn"
                app:layout_constraintBottom_toTopOf="@+id/p"
                app:layout_constraintEnd_toStartOf="@+id/totaltime"
                app:layout_constraintStart_toEndOf="@+id/offtime"
                app:layout_constraintTop_toTopOf="@+id/offtime" />

            <TextView
                android:id="@+id/offtime"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="% P"
                app:layout_constraintEnd_toStartOf="@+id/totaltime3"
                app:layout_constraintStart_toEndOf="@+id/ontime"
                app:layout_constraintTop_toTopOf="@+id/ontime" />

            <TextView
                android:id="@+id/p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="0.32"
                app:layout_constraintEnd_toEndOf="@+id/offtime"
                app:layout_constraintStart_toStartOf="@+id/offtime"
                app:layout_constraintTop_toBottomOf="@+id/offtime" />

            <TextView
                android:id="@+id/c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="0.42"
                app:layout_constraintEnd_toEndOf="@+id/ontime"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/ontime"
                app:layout_constraintTop_toBottomOf="@+id/ontime" />

            <TextView
                android:id="@+id/ontime"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="% C"
                app:layout_constraintEnd_toStartOf="@+id/offtime"
                app:layout_constraintStart_toEndOf="@+id/heatno"
                app:layout_constraintTop_toTopOf="@+id/heatno" />

            <TextView
                android:id="@+id/heatno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="Heat No"
                app:layout_constraintEnd_toStartOf="@+id/ontime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typematerial" />

            <TextView
                android:id="@+id/heat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="124"
                app:layout_constraintEnd_toEndOf="@+id/heatno"
                app:layout_constraintStart_toStartOf="@+id/heatno"
                app:layout_constraintTop_toBottomOf="@+id/heatno" />

            <TextView
                android:id="@+id/totaltime"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="% S"
                app:layout_constraintBottom_toTopOf="@+id/p"
                app:layout_constraintEnd_toStartOf="@+id/totaltime2"
                app:layout_constraintStart_toEndOf="@+id/totaltime3"
                app:layout_constraintTop_toTopOf="@+id/offtime"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/totaltime2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable"
                android:padding="8dp"
                android:text="% Si"
                app:layout_constraintBottom_toTopOf="@+id/p"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/totaltime"
                app:layout_constraintTop_toTopOf="@+id/offtime"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/s"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="12"
                app:layout_constraintEnd_toEndOf="@+id/totaltime"
                app:layout_constraintStart_toStartOf="@+id/totaltime"
                app:layout_constraintTop_toBottomOf="@+id/totaltime" />

            <TextView
                android:id="@+id/mn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="12.00"
                app:layout_constraintEnd_toEndOf="@+id/totaltime3"
                app:layout_constraintStart_toStartOf="@+id/totaltime3"
                app:layout_constraintTop_toBottomOf="@+id/totaltime" />

            <TextView
                android:id="@+id/si"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/customtable2"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="12"
                app:layout_constraintEnd_toEndOf="@+id/totaltime2"
                app:layout_constraintStart_toStartOf="@+id/totaltime2"
                app:layout_constraintTop_toBottomOf="@+id/totaltime" />

            <TextView
                android:id="@+id/typematerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>